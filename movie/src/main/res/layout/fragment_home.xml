<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dimen_16_dp">

    <TextView
        android:id="@+id/search_edit_text"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="@dimen/dimen_44_dp"
        android:layout_marginEnd="@dimen/dimen_8_dp"
        android:background="@drawable/shape_input_background"
        android:backgroundTint="@color/neutral_02_darkest_grey"
        android:drawablePadding="@dimen/dimen_6_dp"
        android:text="@string/search_hint"
        android:paddingVertical="11dp"
        android:paddingStart="@dimen/dimen_20_dp"
        android:textSize="@dimen/dimen_14_sp"
        android:textColor="@color/neutral_05_light_grey"
        app:layout_constraintEnd_toStartOf="@id/filter_check_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableStartCompat="@drawable/ic_search" />

    <CheckBox
        android:id="@+id/filter_check_box"
        android:layout_width="44dp"
        android:layout_height="0dp"
        android:button="@drawable/filter_button_selector"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/search_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_edit_text"
        app:useMaterialThemeColors="false" />


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        style="@style/CustomFilterStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/search_edit_text"
        app:selectionRequired="true"
        app:singleSelection="true" />

    <TextView
        android:id="@+id/movie_title"
        style="@style/mediumMontserratMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16_dp"
        android:text="@string/movies_title"
        android:textColor="@color/yellow_primary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chip_group" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_16_dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_title"
        app:spanCount="2"
        tools:listitem="@layout/layout_movie_item" />

</androidx.constraintlayout.widget.ConstraintLayout>