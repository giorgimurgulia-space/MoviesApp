<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment"
    tools:ignore="InvalidNavigation">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.space.movie.presentation.ui.home.HomeFragment"
        android:label="HomeFragment" />

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.space.movie.presentation.ui.details.DetailsFragment"
        android:label="DetailsFragment">

        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>

    <action
        android:id="@+id/action_global_details_Fragment"
        app:destination="@id/detailsFragment" />

    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.space.movie.presentation.ui.favourites.FavouritesFragment"
        android:label="FavouritesFragment" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.space.movie.presentation.ui.search.SearchFragment"
        android:label="SearchFragment" />

    <action
        android:id="@+id/action_global_search_Fragment"
        app:destination="@id/searchFragment" />

</navigation>