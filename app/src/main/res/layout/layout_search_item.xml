<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/neutral_01_black"
    android:paddingTop="@dimen/dimen_24_dp">

    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="@dimen/dimen_100_dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/search_item_banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text"
        style="@style/normalMontserratMedium"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dimen_16_dp"
        android:textColor="@color/neutral_08_whisper"
        app:layout_constraintBottom_toBottomOf="@id/banner_image"
        app:layout_constraintEnd_toStartOf="@id/play_image"
        app:layout_constraintStart_toEndOf="@id/banner_image"
        app:layout_constraintTop_toTopOf="@id/banner_image"
        tools:text="The boss" />

    <ImageView
        android:id="@+id/play_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="@dimen/dimen_10_dp"
        android:src="@drawable/ic_play_circle"
        app:layout_constraintBottom_toBottomOf="@id/banner_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/banner_image" />


</androidx.constraintlayout.widget.ConstraintLayout>