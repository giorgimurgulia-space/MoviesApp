<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/banner_card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_16_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/banner_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_270_dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/movie_banner" />

        <TextView
            android:id="@+id/genres_text"
            style="@style/smallMontserratMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/dimen_10_dp"
            android:background="@drawable/shape_medium_rectangle_background"
            android:backgroundTint="@color/yellow_primary"
            android:paddingHorizontal="@dimen/dimen_12_dp"
            android:paddingVertical="@dimen/dimen_4_dp"
            android:textColor="@color/black"
            tools:text="Horror" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/movie_title_text"
        style="@style/normalMontserratMedium"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5_dp"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/neutral_08_whisper"
        app:layout_constraintEnd_toStartOf="@id/favorite_check_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_card_view"
        tools:text="In The Tall Grass" />

    <CheckBox
        android:id="@+id/favorite_check_box"
        android:layout_width="@dimen/dimen_20_dp"
        android:layout_height="@dimen/dimen_20_dp"
        android:button="@drawable/check_box_heart_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/movie_title_text"
        app:useMaterialThemeColors="false" />

    <TextView
        android:id="@+id/movie_year_text"
        style="@style/smallMontserratMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5_dp"
        android:textColor="@color/neutral_04_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_title_text"
        tools:text="2019" />
</androidx.constraintlayout.widget.ConstraintLayout>