<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingTop="@dimen/dimen_16_dp">

    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_270_dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@id/movie_title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/movie_banner" />

    <include
        android:id="@+id/category_layout"
        layout="@layout/layout_category_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_title_text"
        style="@style/normalMontserratMedium"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5_dp"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/heart_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_image"
        tools:text="In The Tall Grass" />

    <ImageView
        android:id="@+id/heart_image"
        android:layout_width="@dimen/dimen_20_dp"
        android:layout_height="@dimen/dimen_20_dp"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:layout_marginEnd="@dimen/dimen_5_dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_image" />

    <TextView
        android:id="@+id/movie_year_text"
        style="@style/smallMontserratMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5_dp"
        android:textColor="@color/neutral_01_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_title_text"
        tools:text="2019" />
</androidx.constraintlayout.widget.ConstraintLayout>