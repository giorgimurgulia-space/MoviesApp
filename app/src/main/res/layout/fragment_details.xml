<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_01_black"
    android:paddingTop="@dimen/dimen_16_dp">

    <ImageView
        android:id="@+id/back_image"
        android:layout_width="@dimen/dimen_14_dp"
        android:layout_height="@dimen/dimen_14_dp"
        android:layout_marginStart="@dimen/dimen_22_dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_text" />

    <TextView
        android:id="@+id/title_text"
        style="@style/mediumMontserratMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/details_title"
        android:textAlignment="center"
        android:textColor="@color/neutral_08_whisper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:scaleType="centerInside"
        android:src="@drawable/movie_detail_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text" />

    <LinearLayout
        android:id="@+id/trailer_button_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20_dp"
        android:background="@drawable/shape_button_background"
        android:backgroundTint="@color/yellow_primary"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dimen_20_dp"
        android:paddingVertical="@dimen/dimen_10_dp"
        app:layout_constraintBottom_toBottomOf="@id/banner_image"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            style="@style/smallMontserratMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_4_dp"
            android:text="@string/trailer"
            android:textAlignment="center"
            android:textColor="@color/neutral_01_black" />

        <ImageView
            android:layout_width="@dimen/dimen_10_dp"
            android:layout_height="@dimen/dimen_10_dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_play" />
    </LinearLayout>


    <TextView
        android:id="@+id/movie_title_text"
        style="@style/largeMontserratMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:layout_marginTop="26dp"
        android:textColor="@color/neutral_08_whisper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_image"
        tools:text="The Atonement" />


</androidx.constraintlayout.widget.ConstraintLayout>